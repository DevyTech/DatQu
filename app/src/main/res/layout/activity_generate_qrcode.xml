<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sistem_Scan.Generate_qrcode">

    <ImageView
        android:id="@+id/qrcode_view"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/shareqr"
        android:layout_below="@id/qrcode_view"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon ="@drawable/ic_baseline_share_24"
        android:background="@drawable/btn_qrcode"
        android:text="@string/btn_share_qr"/>
    <Button
        android:id="@+id/downloadqr"
        android:layout_below="@id/shareqr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon ="@drawable/ic_baseline_save_24"
        android:background="@drawable/btn_qrcode"
        android:text="@string/btn_save_qr"/>

    <TextView
        android:id="@+id/nama_qr"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/downloadqr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textAlignment="center" />
    <TextView
        android:id="@+id/nim_qr"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/nama_qr"
        style="@style/TextAppearance.AppCompat.Title"/>
    <TextView
        android:id="@+id/divisi_qr"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/nim_qr"
        style="@style/TextAppearance.AppCompat.Title"/>
</RelativeLayout>