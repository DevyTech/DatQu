<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    tools:context=".Sistem_Scan.DataScanFragment">

    <ImageView
        android:id="@+id/img_pegawai_null"
        android:layout_width="159dp"
        android:layout_height="173dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:src="@drawable/ic_round_post_add_100" />
    <TextView
        android:id="@+id/tv_pegawai_null"
        android:layout_below="@id/img_pegawai_null"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tidak ada data Scan\nSilahkan lakukan Pemindaian Kode QR"
        android:gravity="center_horizontal"
        android:visibility="gone"/>
    <ListView
        android:id="@+id/lv_scan"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

</RelativeLayout>